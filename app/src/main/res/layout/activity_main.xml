<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_name"
        android:text="CARO"
        android:textSize="60dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_player"
        android:text="Single Player"
        android:textSize="35dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/game_name"
        app:layout_constraintLeft_toLeftOf="@+id/game_name"
        app:layout_constraintRight_toRightOf="@id/game_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multi_player"
        android:text="Player VS Player"
        android:textSize="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/single_player"
        app:layout_constraintLeft_toLeftOf="@+id/game_name"
        app:layout_constraintRight_toRightOf="@id/game_name"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit"
        android:text="Exit"
        android:textSize="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/multi_player"
        app:layout_constraintLeft_toLeftOf="@+id/game_name"
        app:layout_constraintRight_toRightOf="@id/game_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>